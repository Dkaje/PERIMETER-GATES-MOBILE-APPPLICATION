<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:layout_marginEnd="5sp"
    android:layout_marginRight="5sp"
    android:orientation="vertical"
    android:padding="5sp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:gravity="center_horizontal"
            android:padding="5sp">

            <ImageView
                android:id="@+id/theProduct"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="10sp"
                android:visibility="visible" />
        </RelativeLayout>

        <TextView
            android:id="@+id/appPName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/relative"
            android:background="@android:color/white"
            android:text="productName"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/appPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appPName"
            android:layout_toRightOf="@+id/relative"
            android:background="@android:color/white"
            android:text="productPrice"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appPrice"
            android:layout_toRightOf="@+id/relative"
            android:text="Click to Edit Cart "
            android:textColor="#0628E8"
            android:textSize="13sp"
            android:textStyle="italic" />
    </RelativeLayout>
</LinearLayout>


