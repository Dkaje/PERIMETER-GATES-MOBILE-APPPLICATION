<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10sp">

    <Spinner
        android:id="@+id/selectCurrent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp" />

    <EditText
        android:id="@+id/landmark"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selectCurrent"
        android:layout_marginTop="10sp"
        android:hint="A known landmark/road/town"
        android:visibility="gone" />

    <EditText
        android:id="@+id/finalSupport"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/landmark"
        android:layout_marginTop="10sp"
        android:hint="village/Street/House"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnTrue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/finalSupport"
        android:background="@color/secondary"
        android:text="proceed to payment"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:visibility="gone" />
</RelativeLayout>